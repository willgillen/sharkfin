# =============================================================================
# Shark Fin Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment.
# See docs/DEPLOYMENT.md for detailed configuration instructions.

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=sharkfin
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=shark_fin

# For development (docker-compose.yml)
DATABASE_URL=postgresql://sharkfin:changeme_secure_password@postgres:5432/shark_fin

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure secret key for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changeme_generate_secure_random_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# For development: http://localhost:8001
# For production: Your domain or http://backend:8000 if using reverse proxy
NEXT_PUBLIC_API_URL=http://localhost:8001

# -----------------------------------------------------------------------------
# Production Deployment (docker-compose.prod.yml)
# -----------------------------------------------------------------------------
# Version tag for Docker images (e.g., latest, v1.0.0)
SHARK_FIN_VERSION=latest

# Port to expose the frontend (default: 3000)
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Optional: Plaid Integration (for bank connections)
# -----------------------------------------------------------------------------
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# -----------------------------------------------------------------------------
# Optional: Email/SMTP (for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
